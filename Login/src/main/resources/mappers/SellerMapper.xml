<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.jk.login.mapper.SellerMapper">
    <!--查找所有用户-->
    <select id="find_all_sellers" resultType="Seller">
        select * from Seller
    </select>
    <!--根据用户名查找用户-->
    <select id="find_seller_by_tel" resultType="Seller">
        select * from Seller where STel = #{STel}
    </select>
    <!--登录用户-->
    <select id="seller_login" resultType="Seller">
        select * from Seller where STel=#{STel} and SPassword = #{SPassword}
    </select>
    <!--注册用户-->
    <insert id="seller_register" parameterType="Seller">
        insert into Seller(SName,SPassword,STel,SAddress) values (#{SName},#{SPassword},#{STel},#{SAddress})
    </insert>
    <!--修改密码-->
    <update id="update_seller_password" parameterType="Seller">
        update Seller set SPassword=#{SPassword} where STel=#{STel}
    </update>
    <update id="update_seller_info" parameterType="Seller">
        update Seller set SName=#{SName}, SAddress=#{SAddress} where STel=#{STel}
    </update>

</mapper>